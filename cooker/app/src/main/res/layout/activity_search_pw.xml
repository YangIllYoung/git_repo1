<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_9B51E0"
    android:orientation="vertical"
    tools:context=".SearchPwActivity">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_marginTop="40dp"
        android:scaleType="center"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="아이디를 입력해 주세요"
                android:textColor="@color/black"
                android:textSize="@dimen/default_text_size_s" />

            <EditText
                android:id="@+id/inputSearchId"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/inputbox"
                android:inputType="textEmailAddress"
                android:padding="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="핸드폰번호를 입력해 주세요"
                android:textColor="@color/black"
                android:textSize="@dimen/default_text_size_s" />

            <EditText
                android:id="@+id/inputSearchPhone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/inputbox"
                android:inputType="textEmailAddress"
                android:padding="10dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="30dp">

            <Button
                android:id="@+id/btnSearchPw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="비밀번호 찾기"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>